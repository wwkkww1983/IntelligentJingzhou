<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zack.intelligent.fragment.MusicFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_10dp">

        <Button
            android:id="@+id/btn_volume_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量+"
            android:layout_margin="@dimen/dimen_5dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_volume_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量-"
            android:layout_margin="@dimen/dimen_5dp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <EditText
                android:id="@+id/music_et_switch_code"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@drawable/shape_edt_bg"
                android:ems="5"
                android:inputType="number"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_open_alarm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="打开报警器" />

            <Button
                android:id="@+id/btn_open_alcohol"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="打开酒精检测仪" />

            <Button
                android:id="@+id/btn_open_door_lock"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="打开枪柜门锁" />

            <Button
                android:id="@+id/btn_read_humiture_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="读取温湿度值" />

            <Button
                android:id="@+id/btn_read_alcohol_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="读取酒精检测值" />

            <Button
                android:id="@+id/btn_read_ups_status"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="读取备用电源状态" />

            <Button
                android:id="@+id/read_ups_battery_percentum"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:text="读取备用电源电量" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_receive_msg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:editable="false"
                android:gravity="start"
                android:textSize="@dimen/default_text_size" />

            <Button
                android:id="@+id/btn_clear_receive"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="清除接收数据" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
