<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024dp"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:background="#64333333"
    >

    <ImageView
        android:id="@+id/dialog_img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close_dialog"
        android:layout_above="@+id/dl_rl_login"
        android:layout_toRightOf="@+id/dl_rl_login"
        />

    <RelativeLayout
        android:id="@+id/dl_rl_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/login_dialog_iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_input_vein"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            />

        <SurfaceView
            android:id="@+id/login_dl_surface_view"
            android:layout_width="480dp"
            android:layout_height="320dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请验证身份"
        android:singleLine="true"
        android:textSize="@dimen/text_size_18sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_below="@+id/dl_rl_login"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/dialog_txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="msg"
        android:textSize="@dimen/text_size_18sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_txt_user"
        />

</RelativeLayout>