<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="500dp"
    android:background="@drawable/bg_blue_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dl_img_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/dl_alarm_txt_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:text="报警原因"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_24sp" />

        <TextView
            android:id="@+id/dl_alarm_txt_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请值班管理员验证身份解除报警"
            android:textSize="@dimen/text_size_20sp" />

        <TextView
            android:id="@+id/dl_alarm_txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>


    <Button
        android:id="@+id/dl_btn_relieve_alarm"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="解除报警"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>