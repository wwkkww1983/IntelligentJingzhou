<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    tools:context="com.zack.intelligent.ui.fragment.AboutFragment"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_system_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edt_bg"
        android:ems="10"
        android:layout_margin="@dimen/dimen_10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edt_bg"
        android:layout_margin="@dimen/dimen_10dp"
        android:ems="10"/>

    <Button
        android:id="@+id/sys_info_btn_reboot_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重启系统"
        style="@style/buttonStyle"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txt_system_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        />

</LinearLayout>
