<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ac_top_layout_status"/>
    <include layout="@layout/ac_top_layout_func"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/urgent_btn_get"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60dp"
            android:textSize="@dimen/text_size_30sp"
            android:text="紧急领取枪弹"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@color/simple_blue"
            />

        <TextView
            android:id="@+id/urgent_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60dp"
            android:textSize="@dimen/text_size_30sp"
            android:text="归还枪弹"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/urgent_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>