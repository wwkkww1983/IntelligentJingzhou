<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.TempInFragment">

    <TextView
        android:id="@+id/temp_in_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="临时存放枪支"
        android:textSize="@dimen/dimen_30dp"
        android:layout_margin="@dimen/dimen_30dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/temp_in_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/temp_in_ll_view"
        android:layout_below="@+id/temp_in_tittle"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/temp_in_ll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/temp_in_finish"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="完成"
            android:layout_margin="@dimen/dimen_10dp"
            android:gravity="center"
            />

    </RelativeLayout>
</RelativeLayout>